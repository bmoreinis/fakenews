{
  "manifest_version": 2,

  "name": "FakeNewsFitness Plugin",
  "description": "This extension will analyze a page for truth value",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
	  "css" : ["form.css"]
    }
  ],
  
  "permissions": [
   "activeTab",
   "downloads"
   ]
}