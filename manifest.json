{
  "manifest_version": 2,

  "name": "FakeNewsFitness Plugin",
  "description": "This extension will analyze a page for truth value",
  "version": "2.61",

  "browser_action": {
   "default_icon": "icon.png"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
	  "css" : ["form.css"]
    }
  ],
  
    "web_accessible_resources": [
    "help.png"
  ],
  
  "permissions": [
   "activeTab",
   "downloads"
   ]
}